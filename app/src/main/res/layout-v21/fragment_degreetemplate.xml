<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp" >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FirstSemesterTitle_TextView"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_marginTop="44dp"
                android:text="@string/FirstSemesterstring"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="395dp"
                android:layout_height="43dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"

                    android:text="@string/Course_string"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="@string/CourseId_string"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Credit_string"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />

            </LinearLayout>

            <ListView
                android:id="@+id/FirstSemesterListView"
                android:layout_width="328dp"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:background="@color/ListBackgroundcolor"
                android:nestedScrollingEnabled="false">

            </ListView>

            <TextView
                android:id="@+id/SecondSemesterTitle_TextView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:nestedScrollingEnabled="false"
                android:text="@string/SecondSemesterString"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingEnd="50dp"

                    android:text="@string/Course_string"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="@string/CourseId_string"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Credit_string"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />

            </LinearLayout>

            <ListView
                android:id="@+id/SecondSemesterListView"
                android:layout_width="match_parent"
                android:layout_height="312dp"
                android:layout_gravity="center"
                android:background="@color/ListBackgroundcolor"
                android:nestedScrollingEnabled="false">

            </ListView>

            <TextView
                android:id="@+id/ThirdSemesterTitle_TextView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:nestedScrollingEnabled="false"
                android:text="@string/ThirddSemesterString"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingEnd="50dp"

                    android:text="@string/Course_string"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="@string/CourseId_string"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Credit_string"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />

            </LinearLayout>

            <ListView
                android:id="@+id/ThirdSemesterListView"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:background="@color/ListBackgroundcolor"
                android:nestedScrollingEnabled="false">

            </ListView>


            <TextView
                android:id="@+id/FourthSemesterTitle_TextView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:nestedScrollingEnabled="false"
                android:text="@string/FourthdSemesterString"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingEnd="50dp"

                    android:text="@string/Course_string"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="@string/CourseId_string"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Credit_string"
                    android:textAlignment="center"
                    android:textColor="@color/black"


                    />

            </LinearLayout>

            <ListView
                android:id="@+id/FourthSemesterListView"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:background="@color/ListBackgroundcolor"
                android:nestedScrollingEnabled="false">

            </ListView>





        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


